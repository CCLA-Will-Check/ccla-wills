<p>Update request status.</p>

<p><strong>Request applicant: </strong>: <%= @request.applicant %></p>

<div class="row">
  <div class="col-md-6">
    <%= form_for(@request) do |f| %>

      <%= f.label :status %>
      <%= f.select :status, ['New', 'In Progress', 'Closed'], class: 'form-control' %>
      <br />
      <%= f.submit "Update Status", class: "btn btn-default btn-primary" %>
    <% end %>
