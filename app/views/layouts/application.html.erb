<!DOCTYPE html>
<html>
  <head>
    <title>Wills</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="main-container" class="container-fluid">
      <div class="row">
        <div id="sidebar" class="col-xs-2">
          <%= link_to image_tag("WCLogo-trans.png", class: "wc-logo"), controller: :welcome,  action: :index %>
          <div class="menu">
            <% if logged_in? %>
              <p><strong>Logged in as</strong> <%= current_user.name %></p>
              <div class="nav-item">
                <%= link_to "Profile", current_user, class: "btn btn-default btn-primary" %>
              </div>
              <div class="nav-item">
                <%= link_to "Log out", logout_path, method: :delete, class: "btn btn-default btn-primary" %>
              </div>
              <div class="nav-item">
                <%= link_to "Search (staff only)", {controller: :search, action: :index}, class: "btn btn-default btn-primary" %>
              </div>
            <% end %>
            <div class="nav-item">
              <%= link_to "Find a Will", {controller: :request, action: :new}, class: "btn btn-default btn-primary" %>
            </div>
            <div class="nav-item">
              <%= link_to "Register a Will", {controller: :will, action: :new}, class: "btn btn-default btn-primary" %>
            </div>
          </div>
          <%= image_tag "cclacenprigrayrgb300-small.png", class: "ccla-logo" %>
        </div>
        <div id="content" class="col-xs-10">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>

          <%= yield %>
        </div>
      </div>
  </body>
</html>
