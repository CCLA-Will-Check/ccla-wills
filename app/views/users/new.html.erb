<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @user, html: {class: "form-inline"} do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name", class: "col-md-6 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email", class: "col-md-6 control-label" %>
        <div class="col-md-6">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password", class: "col-md-6 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "col-md-6 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
      <%= f.submit "Create my account", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
